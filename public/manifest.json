{
  "name": "UpLink",
  "description": "Send files to the cloud with a single click!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "tabs", 
    "http://*/", 
    "https://*/*",
    "storage"
  ],
  "icons": {
    "16": "icon-bitty.png",
    "48": "icon-small.png",
    "128": "icon-large.png"
  },
  "action": {    
    "default_popup": "index.html"
  },
  "background": {
		"service_worker": "background.js"
  },

  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "host_permissions": ["<all_urls>"]
}
